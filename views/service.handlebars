<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="css/quote-form.css">
	<title>Services</title>
</head>
<body>
	<main>
		<div class="row">
		<!--Add Service Form-->	
			<section class="col">
				<div class="row align-items-start">
					<h1>Add Service</h1>
					<form class="col" id="add-service-form">
						<!-- Service -->
						<h2>Service: </h2>
						<div class="row">
							<div class="col">
								<label for="service_name"></label>
								<textarea id="service_name" name="service_name" rows="2" cols="30">{{service_name}}</textarea>
							</div>
						</div>
						<!-- Description -->
						<h2>Description: </h2>
						<div class="row">
							<div class="col">
								<label for="service_description"></label>
								<textarea type="text" id="service_description" name="service_name" rows="4" cols="30">{{service_description}}</textarea>
							</div>
						</div>
						<!-- Price -->				
						<h2>Price: </h2>
						<div class="row">
							<div class="col">
								<label for="service_price"></label>
								<textarea type="text" id="service_price" name="service_price" rows="2" cols="30" >{{service_price}}</textarea>
							</div>
						</div>
						<button type="submit" id="add-service-btn" class="btn btn-primary btn-lg">Add</button>
					</form>
				</div>
			</section>

			<!--Service List-->
			<section class="col">
				<h1>Services List</h1>
				<div class="row align">
					<form id="servicesList">
			<!--handlebar renders each-->		
						{{#each services as |service|}}
						<div class="service-card">
							<a href="/api/services/{{id}}"> 
								<h2 id="service-name" class="text-danger">{{service_name}}<h2/>
								<p id="service-price" class="text-white"><strong>{{service_price}}</strong></p>
								<p id="service-description" class="text-warning">{{service_description}}</p>
							</a>
						</div>
						{{/each}}
						<button type="submit" id="edit-service-btn" class="btn btn-primary btn-lg">Edit<a href="/services/edit/"></a></button>
					</form>
				</div>
			</section>
		</div>
	</main>
	<!-- Add service form -->
	<script src="/js/service.js"></script>
</body>