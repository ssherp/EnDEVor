	<link rel="stylesheet" href="css/quote-form.css">
	<title>Services</title>
</head>
<body>
	<main>
		<div class="row">
		<!--Add Service Form-->	
			<section class="col">
				<div class="row align-items-start">
					<h1>Add Service</h1>
					<form class="col services-list">
					<!-- Service -->
						<h2>Service: </h2>
						<div class="row">
							<div class="col">
								<input type="text" id="service-name" class="form-control" placeholder="Enter Service Name" aria-label="Project name">
							</div>
						</div>
					<!-- Description -->
						<h2>Description: </h2>
						<div class="row">
							<div class="col">
								<input type="text" id="service-description" class="form-control" placeholder="Enter Service Description" aria-label="First name" >
							</div>
						</div>
					<!-- Price -->				
						<h2>Price: </h2>
						<div class="row">
							<div class="col">
								<input type="number" class="service-description" placeholder="Enter Price" aria-label="Project name">
							</div>
						</div>
						<button type="submit" id="add-service-btn" class="btn btn-primary btn-lg">Add</button>
					</form>
				</div>
			</section>

			<!--Service List-->
			<section class="col">
				<h1>Services List</h1>
				<div class="row align">
					<form id="servicesList">
			<!--handlebar renders each-->		
						{{#each services as |service|}}
						<div class="service-card">
							<a href="/api/services/{{id}}"> 
								<h2 id="service-name" class="text-danger">{{service_name}}<h2/>
								<p id="service-price" class="text-white"><strong>{{service_price}}</strong></p>
								<p id="service-description" class="text-warning">{{service_description}}</p>
							</a>
						</div>
						{{/each}}
						<button type="submit" id="edit-service-btn" class="btn btn-primary btn-lg">Edit<a href="/services/edit/"></a></button>
					</form>
				</div>
			</section>
		</div>
	</main>
	<!-- Add service form -->
	<script src="/js/addServices.js"></script>
</body>