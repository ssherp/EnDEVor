<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="css/quote-form.css">
	<title>Services</title>
</head>
<body>
	<section class="row container-lg col-6">
		<div class="row align-items-start">
			<h1>Add Service</h1>
			<form class="col">
				<h2>Service: </h2>
				<div class="row">
					<div class="col">
						<input type="text" class="form-control" placeholder="Enter Service Name" aria-label="Project name" id="add-service-input">
					</div>
				</div>
				<h2>Description: </h2>
				<div class="row">
					<!-- First Name -->
					<div class="col">
						<input type="text" class="form-control" placeholder="Enter Service Description" aria-label="First name" id="user-first">
					</div>
				</div>
				<h2>Price: </h2>
				<div class="row">
					<div class="col">
						<input type="number" class="form-control" placeholder="Enter Price" aria-label="Project name">
					</div>
				</div>
				<button type="submit" id="add-service-btn" class="btn btn-primary">Add</button>
			</form>
		</div>
	</section>
	<section class="row container-lg col-6">
		<h1>Services List</h1>
		<div class="row align">
			<form id="services-list">
				{{#each services as |service|}}
				<div class="service-card">
					<a href="services/{{id}}"> 
						<header id="service-name" class="text-danger">{{service_name}}</header>
						<h2 id="service-price" class="text-white"><strong>{{price}}</strong></h2>
						<p id="service-description" class="text-warning">{{description}}</p>
					</a>
				</div>
				{{/each}}
				<button type="submit" id="edit-service-btn" class="btn btn-primary">Edit<a href="/services/edit/"></a></button>
			</form>
		</div>
	</section>
	<!-- Add service form -->
	<script src="/js/addServices.js"></script>
</body>